<div class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md">
  <h1 class="text-2xl font-bold mb-4">Tax Rates for Provinces</h1>

  <ul class="grid gap-4">
    <% @provinces.each do |province| %>
      <li class="border border-gray-200 p-4 rounded-md">
        <div class="flex justify-between items-center">
          <h2 class="text-lg font-bold"><%= province.name %></h2>
          <%= link_to "Edit", edit_tax_rate_path(province), class: "px-3 py-1 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition duration-300" %>
        </div>
        <div class="mt-2">
          <strong>GST:</strong> <%= province.gst %><br>
          <strong>PST:</strong> <%= province.pst %><br>
          <strong>HST:</strong> <%= province.hst %>
        </div>
      </li>
    <% end %>
  </ul>
</div>