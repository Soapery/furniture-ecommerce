<div class="bg-gray-100 dark:bg-gray-800 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row -mx-4">
            <div class="md:flex-1 px-4">
                    <div class="h-[460px] rounded-lg bg-gray-300 dark:bg-gray-700 mb-4">
          <%# Use Unsplash URL with product name as a query parameter %>
          <% image_url = "https://source.unsplash.com/featured/?#{@product.name.parameterize}" %>
          <img class="w-full h-full object-cover" src="<%= image_url %>" alt="Product Image">
        </div>
                <%# <div class="h-[460px] rounded-lg bg-gray-300 dark:bg-gray-700 mb-4">
                    <img class="w-full h-full object-cover" src="https://cdn.pixabay.com/photo/2020/05/22/17/53/mockup-5206355_960_720.jpg" alt="Product Image">
                    On hold until images are figured out.
                </div> %>
                <div class="flex -mx-2 mb-4">
                    <div class="w-1/2 px-2">
                        <%= link_to 'Add to Cart', add_to_cart_path(@product.id), data: {turbo_method: :post}, class: "w-full bg-gray-900 dark:bg-gray-600 text-white py-2 px-4 rounded-full font-bold hover:bg-gray-800 dark:hover:bg-gray-700" %>
                        <%# <button class="w-full bg-gray-900 dark:bg-gray-600 text-white py-2 px-4 rounded-full font-bold hover:bg-gray-800 dark:hover:bg-gray-700">Add to Cart</button> %>
                    </div>
                </div>
            </div>
            <div class="md:flex-1 px-4">
                <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-2"><%= @product.name.titleize %></h2>
                <div class="flex mb-4">
                    <div class="mr-4">
                        <span class="font-bold text-gray-700 dark:text-gray-300">Price:</span>
                        <span class="text-gray-600 dark:text-gray-300">$<%= @product.price %></span>
                    </div>
                </div>
                <div class="mb-4">
                    <% if @variations.any? then %>
                      <span class="font-bold text-gray-700 dark:text-gray-300">Select Variation:</span>
                      <div class="flex items-center mt-2">
                        <% @variations.each do |variation| %>
                          <button class="variation-button bg-gray-300 dark:bg-gray-700 text-gray-700 dark:text-white py-2 px-4 rounded-full font-bold mr-2 hover:bg-gray-400 dark:hover:bg-gray-600 whitespace-nowrap"><%= variation.variation_name.titleize %></button>
                        <% end %>
                      </div>
                    <% end %>
                </div>
                <div>
                  <span class="font-bold text-gray-700 dark:text-gray-300">Product Variation:</span>
                  <span class="text-gray-600 dark:text-gray-300"><%= @product.product_variations.first&.variation_name %></span>
                </div>
                <div class="mb-4">
                    <% if @patterns.any? then %>
                      <span class="font-bold text-gray-700 dark:text-gray-300">Select Pattern:</span>
                      <div class="flex items-center mt-2">
                        <% @patterns.each do |pattern| %>
                          <button class="pattern-button bg-gray-300 dark:bg-gray-700 text-gray-700 dark:text-white py-2 px-4 rounded-full font-bold mr-2 hover:bg-gray-400 dark:hover:bg-gray-600 whitespace-nowrap"><%= pattern.pattern_name.titleize %></button>
                        <% end %>
                      </div>
                    <% end %>
                </div>
                <div>
                    <span class="font-bold text-gray-700 dark:text-gray-300">Product Description:</span>
                    <p class="text-gray-600 dark:text-gray-300 text-sm mt-2">
                      <%= @product.description%>
                    </p>
                </div>
                <div class="flex -mx-2 mb-4">
                  <div class="w-1/2 px-2">
                    <% if current_user&.admin? %>
                      <%= link_to 'Admin Panel', edit_product_path(@product), class: 'bg-blue-500 dark:bg-gray-600 text-white py-2 px-4 rounded-full font-bold hover:bg-gray-800 dark:hover:bg-gray-700 inline-block mt-2' %>
                    <% end %>
                  </div>
              </div>
            </div>
        </div>
    </div>
</div>
